<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorActionButton</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Action Button. -->
    <style name="ActionButton" parent="MainButton">
        <item name="android:background">@color/colorActionButton</item>
    </style>

    <!-- Number Button. -->
    <style name="NumberButton" parent="MainButton">
        <item name="android:background">@color/colorNumberButton</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
